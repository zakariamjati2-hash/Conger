// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  BUREAU
  TERRAIN
}

enum ProjectStatus {
  PLANNED
  IN_PROGRESS
  ON_HOLD
  DELIVERED
  CLOSED
}

enum TaskStatus {
  TODO
  DOING
  REVIEW
  DONE
  BLOCKED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  name         String?
  role         Role     @default(TERRAIN)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  projectsAsBureau     Project[]    @relation("BureauProjects")
  projectsAsTerrain    ProjectAssignment[]
  projectsCreated      Project[]    @relation("CreatedProjects")
  tasksAssigned        Task[]       @relation("AssignedTasks")
  attachmentsUploaded  Attachment[] @relation("UploadedAttachments")
  comments             Comment[]
  auditLogs            AuditLog[]

  @@map("users")
}

model Project {
  id          String        @id @default(cuid())
  title       String
  client      String?
  location    String?
  startDate   DateTime?     @map("start_date")
  endDate     DateTime?     @map("end_date")
  status      ProjectStatus @default(PLANNED)
  progress    Int           @default(0) // 0..100
  description String?       @db.Text
  budget      Float?
  tags        String[]
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  // Relations
  bureauId    String? @map("bureau_id")
  bureau      User?   @relation("BureauProjects", fields: [bureauId], references: [id], onDelete: SetNull)
  
  createdById String  @map("created_by_id")
  createdBy   User    @relation("CreatedProjects", fields: [createdById], references: [id], onDelete: Cascade)

  terrainAgents ProjectAssignment[]
  tasks         Task[]
  attachments   Attachment[]
  auditLogs     AuditLog[]

  @@map("projects")
}

model ProjectAssignment {
  id        String   @id @default(cuid())
  projectId String   @map("project_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@map("project_assignments")
}

model Task {
  id        String     @id @default(cuid())
  projectId String     @map("project_id")
  title     String
  status    TaskStatus @default(TODO)
  progress  Int        @default(0) // 0..100
  due       DateTime?
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  // Relations
  assigneeId String? @map("assignee_id")
  assignee   User?   @relation("AssignedTasks", fields: [assigneeId], references: [id], onDelete: SetNull)

  project  Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  comments Comment[]

  @@map("tasks")
}

model Attachment {
  id           String   @id @default(cuid())
  projectId    String   @map("project_id")
  fileName     String   @map("file_name")
  fileUrl      String   @map("file_url")
  mimeType     String?  @map("mime_type")
  fileSize     Int?     @map("file_size")
  uploadedById String   @map("uploaded_by_id")
  createdAt    DateTime @default(now()) @map("created_at")

  project    Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  uploadedBy User    @relation("UploadedAttachments", fields: [uploadedById], references: [id], onDelete: Cascade)

  @@map("attachments")
}

model Comment {
  id        String   @id @default(cuid())
  taskId    String   @map("task_id")
  authorId  String   @map("author_id")
  body      String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")

  task   Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@map("comments")
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  entity    String   // Project/Task/Attachment/User
  entityId  String   @map("entity_id")
  action    String   // CREATE/UPDATE/DELETE/STATUS_CHANGE/UPLOAD/ASSIGN
  details   Json?
  createdAt DateTime @default(now()) @map("created_at")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String?  @map("project_id")
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("audit_logs")
}
